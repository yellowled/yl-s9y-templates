{
    "name": "yl-s9y-templates",
    "description": "Stripped-down, bare-bones HTML5 templates for s9y",
    "version": "2.0.0",
    "homepage": "https://github.com/yellowled/yl-s9y-templates",
    "author": {
        "name": "Matthias Mees",
        "url": "https://yellowled.de"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:yellowled/yl-s9y-templates.git"
    },
    "bugs": {
        "url": "https://github.com/yellowled/yl-s9y-templates/issues"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "scripts": {
        "build": "run-s clean copy css:build js:build svg:build",
        "clean": "rimraf dist/",
        "copy": "copyfiles *.tpl *.php UTF-8/*.php *.txt dist/",
        "css:build": "run-s css:compile css:prefix css:minify",
        "css:compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 5 style.scss style.css",
        "css:minify": "cleancss --level 1 --source-map --source-map-inline-sources --output dist/style.css style.css",
        "css:prefix": "postcss --config .postcssrc --replace \"style.css\"",
        "js:build": "uglifyjs --compress --mangle --comments \"/^!/\" --source-map \"url=theme.js.map\" --output dist/theme.js -- node_modules/svg4everybody/dist/svg4everybody.js theme.js",
        "svg:build": "run-s svg:dir svg:compile svg:minify",
        "svg:dir": "mkdirp dist/img/",
        "svg:compile": "svg-sprite-generate -d icons/ -o dist/img/icons.svg",
        "svg:minify": "svgo --config=.svgorc dist/img/icons.svg -o dist/img/icons.svg"
    },
    "dependencies": {
        "node-normalize-scss": "^8.0.0",
        "svg4everybody": "^2.1.9"
    },
    "devDependencies": {
        "autoprefixer": "^9.0.0",
        "clean-css-cli": "^4.1.11",
        "copyfiles": "^2.0.0",
        "mkdirp": "^0.5.1",
        "node-sass": "^4.9.2",
        "npm-run-all": "^4.1.3",
        "postcss-cli": "^6.0.0",
        "postcss-flexbugs-fixes": "^4.0.0",
        "rimraf": "^2.6.2",
        "svg-sprite-generator": "^0.0.7",
        "svgo": "^1.0.5",
        "uglify-js": "^3.4.5"
    }
}
